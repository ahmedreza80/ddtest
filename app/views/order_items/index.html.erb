  <hr class="soften"/>  
<% @items.each do |item| %>

<div class="container">



  

  <table class="table table-bordered table-condensed">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Description</th>

                  <th>Unit price</th>
                  <th>Qty </th>
                  <th>Remove</th>
        </tr>
              </thead>
              <tbody>
                <tr>
                  <td><img width="100" src="<%= item.chair.image %>" alt=""></td>
                  <td><%= item.chair.title %><br><%= item.chair.sdescription %></td>
                  <td> Rs. <%= item.price %> X</td>
                  <td><span class="shopBtn"><span class="icon-ok"><%= item.quantity %></span></span> </td>
                  
                  <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </div>
        </td>
                 
                </tr>
                <tr>
                  <td colspan="4" class="alignR">Total:  </td>
                  <td> Rs. <%= current_cart.sub_total %></td>
                </tr>
        </tbody>
            </table><br/>
                  </div>
                  </div>

        
<% end %>
