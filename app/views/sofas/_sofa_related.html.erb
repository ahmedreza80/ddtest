<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="/assets/sofas.scss">
</head>

<body>



  <main>




    <div class="container-fluid bg-cover">
      <div class="container product-section-cover">
        
        <div class="row">


          <% @sofas.each do |sofa| %>
          <div class="col col-md-4 col-sm-6">
              <div class="product-grid">
                <div class="image">
                  <a href="#">
                    <img src= "<%= sofa.image %>" alt="<%= sofa.title %> 's image" class="img-fluid">
                    <span class="overlay">
                        <span class="product-details">
                          View Details
                        </span>
                    </span>
                  </a>
                </div>
                <div class="product-discription py-3">
                <h4 class="text-center"><%= sofa.title %></h4>
                <p class="text-center"><small><%= sofa.sdescription %></small></p>
                <span class="product-price">
                <p class="text-center d-inline">Price: <%= sofa.price %></p><i class="fa fa-heart d-inline" aria-hidden="true"></i>
                </span>
                </div>
                <div class="product-btn py-2 text-center">
                <a href="#" class="btn btn-lg btn-outline-secondary" role="button" aria-pressed="true">ADD TO CART</a>
                </div>
              </div>
          </div>
          <% end %>

      </div>
    </div>


  </main>

</body>
